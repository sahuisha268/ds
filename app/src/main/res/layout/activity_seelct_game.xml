<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.games.dsgames.Activity.SeelctGameActivity">
    <include layout="@layout/all_page_background"/>
    <include layout="@layout/appbar_toolbar_layout"/>
    <ScrollView
        android:layout_below="@+id/appbar"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/tv_matka_name"
            android:text=""
            android:padding="@dimen/space_10"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/space_14"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@android:color/darker_gray"
            android:layout_margin="@dimen/space_2"/>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/tv_days"
            android:text="Play Game"
            android:padding="@dimen/space_2"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="@dimen/space_13"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@android:color/darker_gray"
            android:layout_margin="@dimen/space_2"/>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/tv_number"
            android:text="Play Game"
            android:padding="@dimen/space_10"
            android:textColor="@color/black"
            android:textSize="@dimen/space_15"
            />
        <LinearLayout
            android:id="@+id/lin_time"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="5"
            android:gravity="center"
            android:padding="@dimen/space_2"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/matka_open_bid_Time"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"

                android:textColor="@color/black"
                android:textSize="12dp" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                />
            <TextView
                android:id="@+id/matka_close_bid_Time"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="12dp"
                 />

        </LinearLayout>
<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/rv_bids"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="@dimen/space_15"-->
<!--            android:layout_marginRight="@dimen/space_15"/>-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:layout_margin="@dimen/space_12"
            android:id="@+id/card_digit"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/tv_bid"
                    android:text="Bid on"
                    android:padding="@dimen/space_10"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimary"
                    android:textSize="@dimen/space_14"
                    />
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:weightSum="2"
                  android:gravity="center">
                  <LinearLayout
                      android:id="@+id/lin_single_digit"
                      android:padding="5dp"
                      android:layout_margin="10dp"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="80dp"
                          android:padding="@dimen/space_10"
                          android:src="@drawable/patti"
                     />
                      <TextView

                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Single Digit"
                          android:gravity="center"
                          android:textSize="16dp"
                          android:textColor="@color/colorAccent"/>
                  </LinearLayout>
                  <LinearLayout
                      android:id="@+id/lin_choice"
                      android:padding="5dp"
                      android:layout_margin="10dp"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:visibility="gone"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="80dp"
                          android:padding="@dimen/space_10"
                          android:src="@drawable/patti"
                        />
                      <TextView

                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Choice Panna"
                          android:gravity="center"
                          android:textSize="16dp"
                          android:textColor="@color/colorAccent"/>
                  </LinearLayout>
              </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:layout_margin="@dimen/space_12"
        android:id="@+id/card_jodi"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:text="Bid on Jodi"
                    android:padding="@dimen/space_10"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimary"
                    android:textSize="@dimen/space_14"
                    />
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:weightSum="3"
                  android:gravity="center">
                  <LinearLayout
                      android:id="@+id/lin_jodi"
                      android:padding="5dp"
                      android:layout_margin="10dp"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="80dp"
                          android:padding="@dimen/space_10"
                          android:src="@drawable/patti"
                         />
                      <TextView

                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Jodi"
                          android:gravity="center"
                          android:textSize="16dp"
                          android:textColor="@color/colorAccent"/>
                  </LinearLayout>
                  <LinearLayout
                      android:id="@+id/lin_red_bracket"
                      android:padding="5dp"
                      android:layout_margin="10dp"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="80dp"
                          android:padding="@dimen/space_10"
                          android:src="@drawable/patti"
                         />
                      <TextView

                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Red Bracket"
                          android:gravity="center"
                          android:textSize="16dp"
                          android:textColor="@color/colorAccent"/>
                  </LinearLayout>
                  <LinearLayout
                      android:id="@+id/lin_jodi_digit"
                      android:padding="5dp"
                      android:layout_margin="10dp"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:visibility="gone"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="80dp"
                          android:padding="@dimen/space_10"
                          android:src="@drawable/patti"
                        />
                      <TextView

                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Digit Base Jodi"
                          android:gravity="center"
                          android:textSize="16dp"
                          android:textColor="@color/colorAccent"/>
                  </LinearLayout>
              </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:layout_margin="@dimen/space_12"
            android:id="@+id/card_patti"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:text="Bid on Patti"
                    android:padding="@dimen/space_10"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimary"
                    android:textSize="@dimen/space_14"
                    />
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:weightSum="3"
                  android:gravity="center">
                  <LinearLayout
                      android:id="@+id/lin_single_patti"
                      android:padding="5dp"
                      android:layout_margin="10dp"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="80dp"
                          android:padding="@dimen/space_10"
                          android:src="@drawable/patti" />
                      <TextView

                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Single Patti"
                          android:gravity="center"
                          android:textSize="16dp"
                          android:textColor="@color/colorAccent"/>
                  </LinearLayout>   <LinearLayout
                      android:id="@+id/lin_double_patti"
                      android:padding="5dp"
                      android:layout_margin="10dp"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="80dp"
                          android:padding="@dimen/space_10"
                          android:src="@drawable/patti" />
                      <TextView

                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Double Patti"
                          android:gravity="center"
                          android:textSize="16dp"
                          android:textColor="@color/colorAccent"/>
                  </LinearLayout>
                  <LinearLayout
                      android:id="@+id/lin_triple_patti"
                      android:padding="5dp"
                      android:layout_margin="10dp"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="80dp"
                          android:padding="@dimen/space_10"
                          android:src="@drawable/patti"
                        />
                      <TextView

                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Triple Patti"
                          android:gravity="center"
                          android:textSize="16dp"
                          android:textColor="@color/colorAccent"/>
                  </LinearLayout>
              </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:layout_margin="@dimen/space_12"
            android:id="@+id/card_motor"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:text="Bid for Motor"
                    android:padding="@dimen/space_10"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimary"
                    android:textSize="@dimen/space_14"
                    />
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:weightSum="2">
                  <LinearLayout
                      android:id="@+id/lin_sp"
                      android:padding="5dp"
                      android:layout_margin="10dp"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="80dp"
                          android:padding="@dimen/space_10"
                          android:src="@drawable/patti"
                          android:id="@+id/game_img"/>
                      <TextView
                          android:id="@+id/game_name"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="SP Motor"
                          android:gravity="center"
                          android:textSize="16dp"
                          android:textColor="@color/colorAccent"/>
                  </LinearLayout>
                  <LinearLayout
                      android:id="@+id/lin_dp"
                      android:padding="5dp"
                      android:layout_margin="10dp"
                      android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
                      <ImageView
                          android:layout_width="match_parent"
                          android:layout_height="80dp"
                          android:padding="@dimen/space_10"
                          android:src="@drawable/patti"
                        />
                      <TextView

                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Dp Motor"
                          android:gravity="center"
                          android:textSize="16dp"
                          android:textColor="@color/colorAccent"/>
                  </LinearLayout>
              </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>