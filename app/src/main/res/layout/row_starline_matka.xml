<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_3"
        app:cardCornerRadius="@dimen/space_10">
    <RelativeLayout
        android:id="@+id/rel_matka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:layout_weight="2">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_10"
                    android:src="@drawable/starlineimage"
                    android:layout_centerInParent="true"
                    app:tint="@color/white" />

            </RelativeLayout>
            <LinearLayout
                android:layout_weight="7.5"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:padding="@dimen/space_5"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/pg_Time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="MORNING KUBER"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="MORNING KUBER"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textStyle="bold" />
                <RelativeLayout
                    android:id="@+id/rLayoutNumbers"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true">

                    <RelativeLayout
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/rl_amin"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/pg_Number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000"


                            android:textColor="@color/number_color"
                            android:textSize="16dp"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/pg_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Betting is Running For Today"
                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>