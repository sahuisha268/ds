<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="font">@font/aileron_regular</item>
        <item name="fontFamily">@font/aileron_regular</item>
        <item name="buttonStyle">@style/ButtonStyle</item>

    </style>

    <style name="ButtonStyle" parent="android:Widget.Holo.Button">
        <item name="font">@font/freeroad_regular</item>
        <item name="background">@drawable/gradient_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="inputlayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/grey</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="boxStrokeColor">@color/browser_actions_divider_color</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:drawablePadding">@dimen/space_10</item>

    </style>
    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Horizontal" >
        <item name="color">#CCC0C0</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

<style name="Divider.Vertical">
    <item name="color">#CCC0C0</item>
    <item name="android:layout_width">1dp</item>
    <item name="android:layout_height">match_parent</item>
</style>

</resources>